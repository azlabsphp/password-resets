{
    "name": "drewlabs/passwords",
    "description": "Password resets implementation for drewlabs auth library",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\Passwords\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drewlabs\\Passwords\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "azandrewdevelopper@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1|^8.0",
        "drewlabs/password-contracts": "^0.2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
